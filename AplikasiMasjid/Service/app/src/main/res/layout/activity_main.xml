<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#E0ECEC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="#0896a4"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="20dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#0896A4"
            android:layout_marginTop="40dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:cardBackgroundColor="#ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Waktu Shalat"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#0896A4"
                        android:textSize="37dp"
                        android:textStyle="bold"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#0896A4"
                        android:layout_marginTop="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_margin="20dp">

                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TableRow>

                                    <TextView
                                        android:layout_column="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Shubuh"
                                        android:textSize="30dp"
                                        android:textStyle="bold"
                                        android:textColor="#E0ECEC"/>
                                    <TextView
                                        android:layout_column="2"
                                        android:id="@+id/txt1"
                                        android:layout_width="115dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="50sp"
                                        android:layout_marginStart="30sp"
                                        android:width="50px"
                                        android:textSize="30dp"
                                        android:text="2"
                                        android:textColor="#E0ECEC"/>

                                    <ImageView
                                        android:clickable="true"
                                        android:id="@+id/editShubuh"
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:layout_marginTop="7dp"
                                        android:src="@drawable/ic_mode_edit_black_24dp"/>

                                </TableRow>


                                <TableRow>

                                    <TextView
                                        android:layout_column="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Dhuhur"
                                        android:textStyle="bold"
                                        android:textSize="30dp"
                                        android:textColor="#E0ECEC"/>
                                    <TextView
                                        android:layout_column="2"
                                        android:id="@+id/txt2"
                                        android:layout_width="115dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="50sp"
                                        android:layout_marginStart="30sp"
                                        android:width="50px"
                                        android:textSize="30dp"
                                        android:text="2"
                                        android:textColor="#E0ECEC"/>

                                    <ImageView
                                        android:clickable="true"
                                        android:id="@+id/editDhuhur"
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:layout_marginTop="7dp"
                                        android:src="@drawable/ic_mode_edit_black_24dp"/>

                                </TableRow>

                                <TableRow>

                                    <TextView
                                        android:layout_column="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Ashar"
                                        android:textStyle="bold"
                                        android:textSize="30dp"
                                        android:textColor="#E0ECEC"/>

                                    <TextView
                                        android:id="@+id/txt3"
                                        android:layout_width="115dp"
                                        android:layout_height="51dp"
                                        android:layout_column="2"
                                        android:layout_marginStart="30sp"
                                        android:layout_marginLeft="50sp"
                                        android:width="50px"
                                        android:text="2"
                                        android:textColor="#E0ECEC"
                                        android:textSize="30dp" />

                                    <ImageView
                                        android:clickable="true"
                                        android:id="@+id/editAshar"
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:layout_marginTop="7dp"
                                        android:src="@drawable/ic_mode_edit_black_24dp"/>

                                </TableRow>

                                <TableRow>

                                    <TextView
                                        android:layout_column="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Maghrib"
                                        android:textStyle="bold"
                                        android:textSize="30dp"
                                        android:textColor="#E0ECEC"/>
                                    <TextView
                                        android:layout_column="2"
                                        android:id="@+id/txt4"
                                        android:layout_width="115dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="50sp"
                                        android:layout_marginStart="30sp"
                                        android:width="50px"
                                        android:textSize="30dp"
                                        android:text="2"
                                        android:textColor="#E0ECEC"/>

                                    <ImageView
                                        android:clickable="true"
                                        android:id="@+id/editMaghrib"
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:layout_marginTop="7dp"
                                        android:src="@drawable/ic_mode_edit_black_24dp"/>

                                </TableRow>

                                <TableRow>

                                    <TextView
                                        android:layout_column="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Isya'"
                                        android:textStyle="bold"
                                        android:textSize="30dp"
                                        android:textColor="#E0ECEC"/>
                                    <TextView
                                        android:layout_column="2"
                                        android:id="@+id/txt5"
                                        android:layout_width="115dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="50sp"
                                        android:layout_marginStart="30sp"
                                        android:width="50px"
                                        android:textSize="30dp"
                                        android:text="2"
                                        android:textColor="#E0ECEC"/>

                                    <ImageView
                                        android:clickable="true"
                                        android:id="@+id/editIsha"
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:layout_marginTop="7dp"
                                        android:src="@drawable/ic_mode_edit_black_24dp"/>

                                </TableRow>

                                <TableRow>

                                    <TextView
                                        android:layout_column="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Dhuha"
                                        android:textStyle="bold"
                                        android:textSize="30dp"
                                        android:textColor="#E0ECEC"/>

                                    <TextView
                                        android:id="@+id/txt6"
                                        android:layout_width="115dp"
                                        android:layout_height="wrap_content"
                                        android:layout_column="2"
                                        android:layout_marginStart="30sp"
                                        android:layout_marginLeft="50sp"
                                        android:width="50px"
                                        android:text="2"
                                        android:textColor="#E0ECEC"
                                        android:textSize="30dp" />

                                    <ImageView
                                        android:clickable="true"
                                        android:id="@+id/editDhuha"
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:layout_marginTop="7dp"
                                        android:src="@drawable/ic_mode_edit_black_24dp"/>

                                </TableRow>



                            </TableLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>






    </LinearLayout>

</RelativeLayout>
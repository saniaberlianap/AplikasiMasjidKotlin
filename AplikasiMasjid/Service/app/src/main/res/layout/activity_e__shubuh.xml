<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".E_Shubuh">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp">

        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="#0896A4"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="20dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waktu Shalat"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#0896A4"
            android:textSize="37dp"
            android:textStyle="bold"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#0896A4"
            android:layout_marginTop="30dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardBackgroundColor="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="9dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shubuh    : "
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="30dp"
                        android:textColor="#0896A4"/>
                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="30dp"
                        android:textColor="#0896A4"/>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#0896A4"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="30dp"
                            android:text="Form Edit"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:textColor="#E0ECEC"
                            android:layout_marginBottom="27dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shubuh   : "
                            android:textSize="25dp"
                            android:textColor="#E0ECEC"/>
                        <EditText
                            android:id="@+id/txtShubuh"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:text=""
                            android:hint="Ubah Jam Sholat Shubuh"
                            android:layout_gravity="center"
                            android:textSize="20dp"
                            android:textColor="#E0ECEC"/>
                        <Button
                            android:id="@+id/btnSimpanShubuh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="EDIT"
                            android:layout_marginTop="15dp"
                            android:textColor="#0896a4"
                            android:background="#E0ECEC"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>




</RelativeLayout>